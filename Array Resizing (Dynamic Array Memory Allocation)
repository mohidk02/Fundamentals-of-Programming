#include<iostream>
using namespace std;


void initialize(int* a,int s)
{
	cout<<"\n\tOriginal Array : ";
	for(int i=0;i<s;i++)
	{
		*(a+i)=i;
		cout<<*(a+i);
	}
}
void resize(int* a,int s,int s1)
{
	int *p;
	int s2=0;
	cout<<"\n\tResized Array : ";
	p=new int [s1];
	if(s1>s)
	{
		s2 = s1 - s;
		p=new int[s1];
		for(int i=0;i<s;i++)
		{
			*(p+i)=*(a+i);
		}
		for(int i=s;i<s+s2;i++)
		{
			*(p+i)=0;
		}
		
		
	}
	else
	{
		
		for(int i=0;i<s1;i++)
		{
			*(p+i)=*(a+i);
		}
	}
	delete [] a;
		a=p;
		
		for(int i=0;i<s1;i++)
		{
			cout<<*(a+i);
		}
		
		
	
}

int main()
{
	int s=0,s1=0;
	int*p;
	cout<<"\n\n\t\tResize Array\n\t********************************\n\n"<<"\n\tEnter Array Size : ";
	cin>>s;
	cout<<"\n\tEnter New Size : ";
	cin>>s1;
	if(s1<0)
	{
		cout<<"\n\n\tNew Size Less Than Zero";
	}
	else
	{
		p=new int[s];
		initialize(p,s);
		resize(p,s,s1);
		cout<<"\n\n\n";	
	}
    return 0;
}
